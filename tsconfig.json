{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",

    /* Strict Type Checking */
    "strict": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* Source Maps */
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
